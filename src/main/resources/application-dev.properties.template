# Development configuration template
# Copy this file to application-dev.properties and update with your local settings

# Server configuration
server.port=8080

# Database configuration - SQL Server for local development
spring.datasource.url=jdbc:sqlserver://localhost:1433;databaseName=hokori_db;encrypt=true;trustServerCertificate=true
spring.datasource.username=YOUR_DB_USERNAME
spring.datasource.password=YOUR_DB_PASSWORD
spring.datasource.driver-class-name=com.microsoft.sqlserver.jdbc.SQLServerDriver

# JPA/Hibernate configuration for development
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
# Remove explicit dialect - Hibernate will auto-detect SQL Server

# Firebase configuration for development
firebase.enabled=true
firebase.project-id=hokori-web
firebase.credentials.path=classpath:firebase-service-account.json

# JWT configuration for development
jwt.secret=YOUR_JWT_SECRET_KEY
jwt.expiration=86400000

# Logging configuration for development
logging.level.com.hokori.web=DEBUG
logging.level.org.springframework.security=DEBUG

# Disable Thymeleaf template location check (we're using REST API only)
spring.thymeleaf.check-template-location=false

# Disable JPA open-in-view (better performance for REST API)
spring.jpa.open-in-view=false

# Google Cloud AI configuration
google.cloud.enabled=true
google.cloud.project-id=hokori-web
google.cloud.credentials.path=classpath:google-cloud-service-account.json
